<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDDDDDD"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FFFFFFFF">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="姓名"
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_usercode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_username"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:text="工号"
            android:textColor="@color/item_text" />

        <View
            android:id="@+id/user_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/tv_usercode"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="7dp" />

        <TextView
            android:id="@+id/tv_userorga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/user_detail"
            android:layout_alignTop="@id/user_detail"
            android:layout_marginLeft="20dp"
            android:text="所属单位"
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_usertel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/user_detail"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/user_detail"
            android:text="联系电话"
            android:textColor="@color/item_text" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFFFF"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_dispatch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0\n待配送"
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_finish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0\n已完成"
            android:textColor="@color/item_text" />

        <TextView
            android:id="@+id/tv_remind"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0\n催单量"
            android:textColor="@color/item_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_all"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFFFF"
        android:drawableLeft="@drawable/ic_left_order"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="center_vertical|left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="我的订单"
        android:textColor="@color/item_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFDDDDDD" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFDDDDDD" />

    <TextView
        android:id="@+id/tv_remind_all"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFFFF"
        android:drawableLeft="@drawable/ic_left_remind"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="center_vertical|left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="我的催单"
        android:textColor="@color/item_text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFDDDDDD" />

    <TextView
        android:id="@+id/tv_p_complaint"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFFFFFFF"
        android:drawableLeft="@drawable/ic_left_tousu"
        android:drawablePadding="20dp"
        android:drawableRight="@drawable/ic_arrow"
        android:gravity="center_vertical|left"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="我的投诉"
        android:textColor="@color/item_text" />
</LinearLayout>